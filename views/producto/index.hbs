<h1 style="text-align: center;"> Productos</h1>
    <p >
        <div class="container">
            <button class="btn btn-primary btn-lg" onclick="createFunction()">Crear Producto</button>
            <h2 id="title">Lista de Productos</h2>
            {{#if productos }}
                <table class="table table-hover table-striped ">
                    <thead class="table-dark">
                        <tr align="center">
                            <th>Nombre</th>
