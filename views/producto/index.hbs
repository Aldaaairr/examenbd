                            <th>Stock</th>
                            <th>Precio</th>
                            <th>Proovedor</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each productos }}
                        <tr align="center">
                            <td ><a href="/productos/show/{{ _id }}">{{ nombre }}</a></td>
